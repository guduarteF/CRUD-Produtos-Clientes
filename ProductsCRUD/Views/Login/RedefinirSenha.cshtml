@model RedefinirSenhaModel
@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Redefinir Senha";

}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dismiss="alert" aria-label="Close">X</button>
        @TempData["MensagemErro"]
    </div>
}

<form asp-controller="Login" asp-action="Entrar" method="post">
    <div class="mb-3">
        <label for="login" class="form-label">Login</label>
        <input type="text" asp-for="Login" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
        <div class="text-danger">
            @Html.ValidationMessageFor(x => x.Login)
        </div>

    </div>
    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="text" asp-for="Email" class="form-control" id="email">
        <div class="text-danger">
            @Html.ValidationMessageFor(x => x.Email)
            <div />
        </div>

        <br />

        <button type="submit" class="btn btn-primary" asp-action="EnviarLinkParaRedefinirSenha" asp-controller="Login">
            Redefinir Senha
        </button>
        <a class="btn btn-secondary btn-block" asp-action="Index"  asp-controller="Login" role="button"> Voltar </a>
</form>